<h3>List of employees</h3>
<table border=1>
    <tr>
        <td>{{#strong}} Name{{/strong}}</td>
        <td>{{#strong}}Age{{/strong}}</td>
        <td>{{#strong}}Occupation{{/strong}}</td>
        <td>{{#strong}}Company{{/strong}}</td>
    </tr>
    {{#each data}}
    <tr>
        <td>{{this.name}}</td>
        <td>{{this.age}}</td>
        <td>{{this.occupation}}</td>
        <td>{{this.company}}</td>
    </tr>
    {{/each}}
</table>


